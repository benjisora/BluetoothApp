<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amiltone.bsaugues.bluetoothapp.presentation.ui.activity.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_main_device_discovered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="discovered..." />

    <TextView
        android:id="@+id/activity_main_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <TextView
        android:id="@+id/activity_main_device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!" />



</LinearLayout>
